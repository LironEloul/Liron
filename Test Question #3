

 Console.WriteLine("Enter a number and I will creat a triangle for you");
            int triangle_size = Convert.ToInt32(Console.ReadLine());

            for (int i = 1; i <= triangle_size; i++)
            {
                for (int j = 1; j <= triangle_size; j++)
                {
                    
                    if (j <= i)
                    {
                        Console.Write(j);
                    }
                    else
                    {
                        Console.Write("*");
                    }
                }
                Console.WriteLine();
            }

            Console.WriteLine();
